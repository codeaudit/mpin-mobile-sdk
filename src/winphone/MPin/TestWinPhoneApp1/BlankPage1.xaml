<Page
    x:Class="MPinDemo.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <CommonNavigationTransitionInfo IsStaggeringEnabled="True"/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid>

        <Pivot x:Name="MainPivot" CommonNavigationTransitionInfo.IsStaggerElement="True" 
               SelectionChanged="MainPivot_SelectionChanged">

            <PivotItem x:Uid="ServicesPivotItem" 
                       x:Name="ServicesPivotItem"
                       CommonNavigationTransitionInfo.IsStaggerElement="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!--    <StackPanel Orientation="Horizontal" >
                        <Button x:Uid="AddServiceButton"  Click="AddService_Click" Margin="2"/>
                        <Button x:Uid="DeleteServiceButton" Click="DeleteService_Click" Margin="2"/>
                        <Button x:Uid="TestServiceButton" x:Name="TestServiceButton" Click="TestBackend_click" Margin="2" IsEnabled="False" />
                    </StackPanel>-->
                        <TextBlock x:Uid="ConfigurationTB"/>
                        <ListBox x:Name="ServicesList"  Grid.Row="1"
                             ItemsSource="{Binding BackendsList, Mode=TwoWay}" 
                             SelectedItem="{Binding CurrentService, Mode=TwoWay}" 
                             SelectionChanged="Services_SelectionChanged" 
                             DataContextChanged="ServicesList_DataContextChanged" 
                             ContinuumNavigationTransitionInfo.IsExitElement="True" 
                             ContinuumNavigationTransitionInfo.IsEntranceElement="True">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!--<Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text="{Binding BackendUrl}" FontWeight="Light" Grid.Row="1"/>
                                </Grid>-->
                                    <StackPanel Margin="0,0,0,9.5">
                                        <TextBlock Text="{Binding Title}"  
                                           TextWrapping="Wrap"
                                            Pivot.SlideInAnimationGroup="1"
                                            CommonNavigationTransitionInfo.IsStaggerElement="True"
                                            Style="{ThemeResource ListViewItemTextBlockStyle}"
                                            Margin="0,0,19,0"/>
                                        <TextBlock Text="{Binding BackendUrl}"
                                           TextWrapping="WrapWholeWords"
                                            Pivot.SlideInAnimationGroup="2" 
                                            CommonNavigationTransitionInfo.IsStaggerElement="True" 
                                            Style="{ThemeResource ListViewItemContentTextBlockStyle}"
                                            Margin="0,0,19,0"
                                            Grid.Row="1"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
            </PivotItem>

            <PivotItem x:Uid="UsersPivotItem" 
                       x:Name="UsersPivotItem"
                       CommonNavigationTransitionInfo.IsStaggerElement="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--<StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Margin="2" x:Uid="UsersAddButton" Click="AddUser_Click" x:Name="AddUserButton"/>
                        <Button Margin="2" x:Uid="UsersDeleteButton" Click="DeleteUser_Click" x:Name="DeleteUserButton"/>
                        <Button Margin="2" x:Uid="UsersSelectButton" Click="Authenticate_Click" x:Name="AuthenticateButton"/>
                    </StackPanel>-->
                    <ListBox x:Name="UsersListBox" Loaded="UsersListBox_Loaded"
                             DataContextChanged="UsersList_DataContextChanged"
                             DataContext="{Binding UsersList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             ItemsSource="{Binding}"
                             SelectionChanged="UsersList_SelectionChanged"
                             ContinuumNavigationTransitionInfo.IsExitElement="True" 
                             ContinuumNavigationTransitionInfo.IsEntranceElement="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!--<Border BorderBrush="Red" BorderThickness="1" Margin="2">
                                    <TextBlock Text="{Binding Id}" />
                                </Border>-->
                                <StackPanel Margin="0,0,0,9.5">
                                    <TextBlock
                                    Text="{Binding Id}"
                                    Pivot.SlideInAnimationGroup="1"
                                    CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    Style="{StaticResource ListViewItemTextBlockStyle}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </PivotItem>

        </Pivot>

    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Uid="AddAppBarButton" 
                          x:Name="AddAppBarButton" 
                          Icon="Add" 
                          Click="AddAppBarButton_Click" />
            
            <AppBarButton x:Uid="SelectAppBarButton" 
                          x:Name="SelectAppBarButton" 
                          Icon="Go" 
                          Click="Authenticate_Click" 
                          IsEnabled="False" 
                          Visibility="Collapsed"/>
               
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Uid="DeleteButton" x:Name="DeleteButton" Icon="Delete" Click="Delete_Click" />
                <AppBarButton x:Uid="TestBackendButton" x:Name="TestBackendButton" Click="TestBackendButton_Click" IsEnabled="False" />
                <AppBarButton x:Uid="ResetPinButton" x:Name="ResetPinButton" Click="ResetPinButton_Click" Visibility="Collapsed" />
            </CommandBar.SecondaryCommands>
            
        </CommandBar>
    </Page.BottomAppBar>
</Page>
