<Page
    x:Class="MPinDemo.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
    
        <Pivot x:Name="MainPivot">

            <PivotItem x:Uid="ServicesPivotItem" x:Name="ServicesPivotItem">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" >
                        <Button x:Uid="AddServiceButton"  Click="AddService_Click" Margin="2"/>
                        <Button x:Uid="DeleteServiceButton" Click="DeleteService_Click" Margin="2"/>
                        <Button x:Uid="TestServiceButton" x:Name="TestServiceButton" Click="TestBackend_click" Margin="2" IsEnabled="False" />
                    </StackPanel>
                    <TextBlock x:Uid="ConfigurationTB" Grid.Row="1"/>
                    <ListBox x:Name="ServicesList" Grid.Row="2" ItemsSource="{Binding BackendsList, Mode=TwoWay}" SelectedItem="{Binding CurrentService, Mode=TwoWay}" SelectionChanged="Services_SelectionChanged" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text="{Binding BackendUrl}" FontWeight="Light" Grid.Row="1"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </PivotItem>

            <PivotItem x:Uid="UsersPivotItem" x:Name="UsersPivotItem">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button Margin="2" x:Uid="UsersAddButton" Click="AddUser_Click" x:Name="AddUserButton"/>
                        <Button Margin="2" x:Uid="UsersDeleteButton" Click="DeleteUser_Click" x:Name="DeleteUserButton"/>
                        <Button Margin="2" x:Uid="UsersSelectButton" Click="Authenticate_Click" x:Name="AuthenticateButton"/>
                    </StackPanel>
                    <ListBox x:Name="UsersList" ItemsSource="{Binding UsersList, Mode=TwoWay}" SelectionChanged="UsersList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Red" BorderThickness="1" Margin="2">
                                    <TextBlock Text="{Binding Id}" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </PivotItem>

        </Pivot>

    </Grid>
</Page>
