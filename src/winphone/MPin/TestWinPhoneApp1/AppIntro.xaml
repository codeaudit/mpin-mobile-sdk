                        <Path Fill="{ThemeResource PhoneAccentBrush}" StrokeThickness="0"
                              Data="M64.000,100.425 L64.000,67.500 C64.000,61.149 58.851,56.000 52.500,56.000 C46.149,56.000 41.000,61.149 41.000,67.500 L41.000,101.033 C34.431,97.227 30.000,90.138 30.000,82.000 L30.000,67.000 C30.000,54.850 39.850,45.000 52.000,45.000 C64.150,45.000 74.000,54.850 74.000,67.000 L74.000,82.000 C74.000,89.720 70.016,96.499 64.000,100.425 Z" />
                    </Canvas>
                    
                    <TextBlock x:Name="IntroCreate" Style="{StaticResource IdentityTextBlock}" Grid.Row="1"/>
                    <TextBlock x:Name="IntroEnterEmail" Style="{StaticResource MainTextBlock}" Grid.Row="2"/>

                </Grid>
            </PivotItem>

            <PivotItem Header="Second">
            </PivotItem>

            <PivotItem Header="Third">
            </PivotItem>

            <PivotItem Header="Fourth">
            </PivotItem>
        </Pivot>

        <Grid Grid.Row="2">
            <Button x:Name="SkipButton" x:Uid="SkipButton" Click="AppBarButton_Click" HorizontalAlignment="Left"/>
            <Button x:Name="NextButton" x:Uid="NextButton" Click="NextButton_Click" HorizontalAlignment="Right" />
            <Button x:Name="DoneButton" x:Uid="DoneButton" Click="AppBarButton_Click" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>

</Page>
