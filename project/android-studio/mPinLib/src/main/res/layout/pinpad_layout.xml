<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mpin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:drawSelectorOnTop="true"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/user_avatar"
        android:src="@drawable/ic_avatar_big" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_avatar"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textColor="@color/base_text_color"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/pinpad_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*" >

        <TableRow>

            <TextView
                android:id="@+id/pinpad_key_1"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/one" />

            <TextView
                android:id="@+id/pinpad_key_2"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/two" />

            <TextView
                android:id="@+id/pinpad_key_3"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/three" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/pinpad_key_4"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/four" />

            <TextView
                android:id="@+id/pinpad_key_5"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/five" />

            <TextView
                android:id="@+id/pinpad_key_6"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/six" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/pinpad_key_7"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/seven" />

            <TextView
                android:id="@+id/pinpad_key_8"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/eight" />

            <TextView
                android:id="@+id/pinpad_key_9"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/nine" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/pinpad_key_clear"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/delete_button"
                android:src="@drawable/ic_delete" />

            <TextView
                android:id="@+id/pinpad_key_0"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:text="@string/zero" />

            <ImageButton
                android:id="@+id/pinpad_key_login"
                style="@style/pin_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/login_button"
                android:src="@drawable/ic_enter" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/wrong_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pinpad_keys"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="@string/wrong_pin"
        android:textColor="@color/orange"
        android:textSize="14sp"
        android:visibility="invisible" />

    <com.certivox.view.SelectionCircles
        android:id="@+id/pin_pad_circles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/wrong_pin"
        android:layout_below="@id/user_email"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        mpin:circleDiameter="20dp"
        mpin:defaultColor="@color/light_green"
        mpin:defaultStyle="hollow"
        mpin:selectedColor="@color/light_green"
        mpin:selectedStyle="filled"
        mpin:spaceBetweenCircles="12dp" />

</RelativeLayout>