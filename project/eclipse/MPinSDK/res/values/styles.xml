<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:fontFamily">@string/font_roboto</item>
    </style>

    <style name="toolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="GuideActivityTheme" parent="AppTheme"></style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/mpinMainColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="subtitle">
        <item name="android:textColor">@color/subtitleColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FloatingActionButton" parent="AppTheme">
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="RaisedButton" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RaisedButtonGreen" parent="RaisedButton">
        <item name="android:background">@drawable/raised_button_green_background</item>
        <item name="android:textColor">@color/button_selector_green_textcolor</item>
    </style>

    <style name="RaisedButtonWhite" parent="RaisedButton">
        <item name="android:background">@drawable/raised_button_white_background</item>
        <item name="android:textColor">@color/button_selector_white_textcolor</item>
    </style>

    <style name="GuideButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/swans_down</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="GuideContent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="GuideTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/swans_down</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <style name="GuideImageView">
        <item name="android:paddingBottom">30dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>